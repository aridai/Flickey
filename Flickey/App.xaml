<Application
    x:Class="Flickey.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        
        <!-- キーボードの背景色 -->
        <SolidColorBrush x:Key="KeyboardBackground">
            <SolidColorBrush.Color>
                <Color R="30" G="35" B="39" A="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
        
        <!-- キーの背景色 -->
        <SolidColorBrush x:Key="KeyBackground">
            <SolidColorBrush.Color>
                <Color R="97" G="100" B="105" A="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>

        <!-- キーの印字の色 -->
        <SolidColorBrush x:Key="KeyForeground">
            <SolidColorBrush.Color>
                <Color R="255" G="255" B="255" A="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
    </Application.Resources>
</Application>