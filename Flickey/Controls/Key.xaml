<UserControl
    x:Class="Flickey.Controls.Key"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ctrls="clr-namespace:Flickey.Controls"
    mc:Ignorable="d"
    d:DesignWidth="64"
    d:DesignHeight="64">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="KeyControlTemplates.xaml" />

                <ResourceDictionary>
                    <Style TargetType="ctrls:Key">
                        <Style.Triggers>
                            <Trigger Property="Shape" Value="Empty">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Empty}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="Normal">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Normal}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="SlideUp">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Slide-Up}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="SlideDown">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Slide-Down}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="SlideRight">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Slide-Right}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="SlideLeft">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Slide-Left}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="HoldCenter">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Hold-Center}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="HoldUp">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Hold-Up}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="HoldDown">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Hold-Down}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="HoldRight">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Hold-Right}" />
                            </Trigger>
                            <Trigger Property="Shape" Value="HoldLeft">
                                <Setter Property="Template" Value="{StaticResource KeyControlTemplate-Hold-Left}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
</UserControl>